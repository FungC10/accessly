# Database
DATABASE_URL=postgresql://user:pass@host:port/db

# NextAuth (Auth.js)
AUTH_SECRET=__REPLACE_ME__
NEXTAUTH_URL=http://localhost:3000
# Provider examples (pick at least one)
GITHUB_ID=__REPLACE_ME__
GITHUB_SECRET=__REPLACE_ME__
# or Email provider
EMAIL_SERVER=smtp://user:pass@smtp.host:587
EMAIL_FROM=Accessly <noreply@yourdomain.com>

# Realtime Option A: Socket.io
# (Usually no extra env unless using Redis adapter)
# REDIS_URL=...

# Realtime Option B: Supabase
NEXT_PUBLIC_SUPABASE_URL=...
NEXT_PUBLIC_SUPABASE_ANON_KEY=...

# App
NEXT_PUBLIC_APP_URL=http://localhost:3000

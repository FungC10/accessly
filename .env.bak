# Database (will use Docker container's postgres)
DATABASE_URL=postgresql://accessly:accessly_dev_password@localhost:5432/accessly?schema=public

# NextAuth (Auth.js) - REQUIRED
AUTH_SECRET=__GENERATE_WITH_OPENSSL_RAND_HEX_32__
NEXTAUTH_URL=http://localhost:3000

# Server configuration
PORT=3000
HOST=0.0.0.0

# App
